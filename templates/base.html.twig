<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {# Flash messags #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div id="flash" class="alert alert-{{ label }}">
                   {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ include('pins/partials/_nav.html.twig') }}

        <main name="main" class="container">
            {% block body %}{% endblock %}
        </main>

        {{ include('pins/partials/_footer.html.twig') }}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
